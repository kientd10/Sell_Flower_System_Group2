    </servlet-mapping>
    <servlet>
        <servlet-name>PlaceOder</servlet-name>
        <servlet-class>Controller.PlaceOder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceOder</servlet-name>
        <url-pattern>/placeOrder</url-pattern>
    </servlet-mapping>
