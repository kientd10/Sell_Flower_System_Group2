    </servlet>
    <servlet>
        <servlet-name>BouquetDetailServlet</servlet-name>
        <servlet-class>Controller.BouquetDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BouquetServlet</servlet-name>
        <url-pattern>/bouquet</url-pattern>
    </servlet-mapping>
